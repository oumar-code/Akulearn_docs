{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "akulearndocs:latest",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"python": {
				"args": [
					"src.backend\\api.learning:app",
					"--host",
					"0.0.0.0",
					"--port",
					"8000"
				],
				"module": "uvicorn"
			}
		},
		{
			"label": "Start FastAPI Server",
			"type": "shell",
			"command": "${workspaceFolder}/myenv/Scripts/python.exe",
			"args": [
				"-m",
				"uvicorn",
				"src.backend.api.learning:app",
				"--reload",
				"--host",
				"127.0.0.1",
				"--port",
				"8000"
			],
			"isBackground": true,
			"problemMatcher": []
		}
	]
}